<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS 자동 전달"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 자동 전달 활성화 스위치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자동 전달"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchForwarding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- 수신자 설정 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수신자 목록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvRecipients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설정된 수신자가 없습니다"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="60dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 목록을 클릭하면 삭제할 수 있습니다"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddRecipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수신자 추가"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- 키워드 필터 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키워드 필터"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="특정 키워드가 포함된 메시지만 전달합니다.\n키워드가 없으면 모든 메시지를 전달합니다."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvKeywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모든 메시지 전달 (키워드 필터 없음)"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="60dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 목록을 클릭하면 삭제할 수 있습니다"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddKeyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키워드 추가"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- 추가 메시지 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추가 메시지"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전달되는 메시지 앞에 추가될 내용을 입력하세요"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAdditionalMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:hint="예: [자동전달] 다음 메시지를 확인하세요"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSaveAdditionalMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추가 메시지 저장"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- 설정 초기화 버튼 -->
        <Button
            android:id="@+id/btnClearSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모든 설정 초기화"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n사용 방법:\n1. '자동 전달' 스위치를 켜세요\n2. 수신자를 추가하세요\n3. (선택) 키워드를 추가하면 해당 키워드가 포함된 메시지만 전달됩니다\n4. (선택) 추가 메시지를 설정하세요\n5. 문자가 도착하면 자동으로 전달됩니다"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
